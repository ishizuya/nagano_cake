<h3>商品編集</h3>
<%= form_with model: @item, url:admin_item_path(@item.id),local:true do |f| %>
  <p>
    <label for="inputImage">画像</label>
    <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>
  </p>
  <p>
    <label for="inputName">商品名</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名" %>
  </p>
  <p>
    <label for="inputIntroduction">商品説明</label>
    <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"ここに説明を記述します" %>
  </p>
  <p>
    <label for="inputGenre_id">ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :@item.genre.name, class: "form-control" %>
     <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), selected: @item.genre.name, autofocus: true, id:"inputGenre_id" %>
  </p>
  <p>
    <label for="inputPrice">税抜価格</label>
    <%= f.text_field :price, autofocus: true, id:"inputPrice", placeholder: "1,000" %>円
  </p>
  <p>
    <label for="inputIs_active">販売ステータス</label>
    <%= f.radio_button :is_active, "true", autofocus: true, id:"inputIs_active" %>
    <%= f.label :payment_method, "販売中" %>
    <%= f.radio_button :is_active, "false", autofocus: true, id:"inputIs_active" %>
    <%= f.label :payment_method, "販売停止中" %>
  </p>
  <%= f.submit '変更を保存' %>
<% end %>