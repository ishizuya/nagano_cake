<div class="container">
  <h2>管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-4 p-0" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "col-4 p-0" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>