<div class="container w-75">
  <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <div class="">
    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>
    <div class="row">
      <p class="col-2">
        会員ID
      </p>
      <p class="col-6">
        <%= @customer.id %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :氏名 %>
      </p>
      <p class="col-6">
        <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"姓" %>
        <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"名" %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :フリガナ %>
      </p>
      <p class="col-6">
        <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"セイ" %>
        <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"メイ" %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :郵便番号 %>
      </p>
      <p class="col-6">
        <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :住所 %>
      </p>
      <p class="col-10">
        <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所", class:"col-7"  %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :電話番号 %>
      </p>
      <p class="col-6">
        <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号" %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :メールアドレス %>
      </p>
      <p class="col-6">
        <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
      </p>
    </div>
    <div class="row">
      <p class="col-2">
        <%= f.label :会員ステータス %>
      </p>
      <p class="col-6">
        <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :有効 %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :退会 %>
    	</p>
    </div>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    <% end %>
  </div>
</div>