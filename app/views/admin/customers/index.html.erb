<h3>会員一覧</h3>
<table>
  <thead>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>
        <td>

            <%= customer.last_name %><%= customer.first_name %>

        </td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
          <%= customer.email %>
          <% end %>
        </td>
        <td>
          <% if customer.is_deleted == false %>
  					有効
  				<% else %>
  					退会
  				<% end %>
  			</td>
      </tr>
    <% end %>
  </tbody>
</table>