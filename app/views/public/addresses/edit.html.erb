<h3>配送先編集</h3>
<%= form_with model: @address, url: address_path(@address), local: true do |f| %>
  <p>
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true %>
  </p>
  <p>
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :宛名 %>
    <%= f.text_field :name %>
  </p>
  <p><%= f.submit "変更内容を保存" %></p>
<% end %>