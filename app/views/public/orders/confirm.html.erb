<h3>注文情報確認</h3>
<table>
  <thead>
    <tr>
      <td colspan="2">商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= link_to item_path(cart_item.item.id) do %>
          <% if cart_item.item.image.attached? %>
            <%= image_tag cart_item.item.image, size: "120x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "120x100" %>
          <% end %>
        <% end %>
      </td>
      <td>
        <%= link_to item_path(cart_item.item.id) do %>
          <%= cart_item.item.name %>
        <% end %>
      </td>
      <td>
        <%= cart_item.item.add_tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.subtotal.to_s(:delimited) %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_cost.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @order.total_payment.to_s(:delimited) %></td>
  </tr>
</table>

<h3>支払い方法</h3>

<h3>お届け先</h3>

<div>
  <%= form_with model: @order, url: orders_path,  local: true do |f| %>
    <%= f.hidden_field :customer_id, value: @order.customer_id %>
    <%= f.hidden_field :postal_code, value: @order.postal_code %>
    <%= f.hidden_field :address, value: @order.address %>
    <%= f.hidden_field :name, value: @order.name %>
    <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
    <%= f.hidden_field :total_payment, value: @order.total_payment %>
    <%= f.hidden_field :payment_method, value: @order.payment_method %>
    <%= f.submit "注文を確定する" %>
  <% end %>
</div>