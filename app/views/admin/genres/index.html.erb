<h1>ジャンル一覧・追加</h1>

  <%= form_with model: @genre do |f| %>
    <p>
    <%= f.label :ジャンル %>
    <%= f.text_field :name, placeholder: "ジャンル名"  %>
    <%= f.submit '新規登録' %>
    </p>
  <% end %>

  <table>
    <thead>
      <tr>
        <td>ジャンル</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
