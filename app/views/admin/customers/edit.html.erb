<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>

<%= form_with model: @customer, url:admin_customer_path,local:true do |f| %>
  <p>
    会員ID　<%= @customer.id %>
  </p>
  <p>
    <%= f.label :氏名 %>
    <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"姓" %>
    <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"名" %>
  </p>
  <p>
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"セイ" %>
    <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"メイ" %>
  </p>
  <p>
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %>
  </p>
  <p>
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %>
  </p>
  <p>
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号" %>
  </p>
  <p>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
  </p>
  <p>
    <%= f.label :会員ステータス %>
      <%= f.radio_button :is_deleted, "false" %>
      <%= f.label :有効 %>
      <%= f.radio_button :is_deleted, "true" %>
      <%= f.label :退会 %>
	</p>
  <%= f.submit '変更を保存' %>
<% end %>